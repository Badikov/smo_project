  <h6><%=t '.title', :default => model_class.model_name.human %></h6>
</div>


    <div class="row-fluid">
	<div class="span8"><%= @person.fam + " " + @person.im + " " + @person.ot%></div>
	<div class="span4"><%=  %></div>
    </div>
	
