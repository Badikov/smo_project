<%- model_class = Vizit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:dvizit) %></th>
      <th><%= model_class.human_attribute_name(:method) %></th>
      <th><%= model_class.human_attribute_name(:petition) %></th>
      <th><%= model_class.human_attribute_name(:rsmo) %></th>
      <th><%= model_class.human_attribute_name(:rpolis) %></th>
      <th><%= model_class.human_attribute_name(:fpolis) %></th>
      <th><%= model_class.human_attribute_name(:person_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vizits.each do |vizit| %>
      <tr>
        <td><%= link_to vizit.id, vizit_path(vizit) %></td>
        <td><%= vizit.dvizit %></td>
        <td><%= vizit.method %></td>
        <td><%= vizit.petition %></td>
        <td><%= vizit.rsmo %></td>
        <td><%= vizit.rpolis %></td>
        <td><%= vizit.fpolis %></td>
        <td><%= vizit.person_id %></td>
        <td><%=l vizit.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vizit_path(vizit), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vizit_path(vizit),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vizit_path,
            :class => 'btn btn-primary' %>
