
<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <% if @user.new_record? %>
    <%= f.input :login %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.association :filials,   :as => :select %>
  <%= f.association :roles,   :as => :check_boxes %>
  <%= f.button :submit %>
<% end %>