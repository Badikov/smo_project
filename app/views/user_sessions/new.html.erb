
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" }, :html => {:class => 'form-signin'} do |f| %>
<h2 class="form-signin-heading">Вход в программу</h2>

  <%= render "shared/error_messages", :target => @user_session %>
  
  <%= f.text_field :email, :class => 'input-block-level', :placeholder => 'Email address'  %>
  
  
  <%= f.password_field :password, :class => 'input-block-level', :placeholder => 'Пароль' %>
  
  <label class="checkbox" for="checkbox"><%= f.check_box :remember_me, :class => 'checkbox' %>
  Запомнить меня</label>
  
  
  
  
    
  
  
  <%= f.button "Войти" ,:class => 'btn btn-large btn-primary', :type => 'submit' %>
<% end %>