
<%= simple_form_for @at do |f| %>

  <%= f.association :ate, :label => nil,:collection => Ate.all(:order => 'nameate'),
    :label_method => :nameate, :value_method => :kdate , :prompt => "Территории Кемеровской области",
    :input_html => { :class => "span5" }%>

  <%= f.input :kdmu, :as => :select, :collection => nil, :prompt => "Медицинское учреждение", :input_html => { :class => "span5", :disabled => true }%>

  <%= f.input :date_b, :as => :string, :input_html => { :disabled => true }%>

  <%= f.input :type_at , :as => :hidden, :input_html => {:value => 'F'} %>
  
  <%= f.input :person_id , :as => :hidden %>


<% end %>