<%- model_class = Doc -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:doctype) %>:</strong></dt>
  <dd><%= @doc.doctype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docser) %>:</strong></dt>
  <dd><%= @doc.docser %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docnum) %>:</strong></dt>
  <dd><%= @doc.docnum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:docdate) %>:</strong></dt>
  <dd><%= @doc.docdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_vp) %>:</strong></dt>
  <dd><%= @doc.name_vp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mr) %>:</strong></dt>
  <dd><%= @doc.mr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:person_id) %>:</strong></dt>
  <dd><%= @doc.person_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              docs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_doc_path(@doc), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              doc_path(@doc),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
