<%= form.simple_fields_for @person.doc, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>

      <!--<%= f.input :doctype, :label => 'Документ', :input_html => {data: {autocomplete_source: tipdocs_path}} %>-->
      <%= f.input :doctype, :collection => Tipdoc.all(:order => :docname),
		    :label_method => :docname, :value_method => :iddoc, :include_blank => false, 
		    :label => 'Документ', :input_html => { class: "span6 doc_type" }%>
    
      <%= f.input :docser, :label => 'Серия' %>
   
      <%= f.input :docnum, :label => 'Номер' %>
      
      <%= f.input :docdate,:label => 'Дата выдачи', :include_blank => true, :as => :date, :start_year => Date.today.year - 30,:end_year => Date.today.year,:order => [:day, :month, :year] %>
    
      <%= f.input :name_vp, :label => 'Кем выдан', :as => :text, :input_html => {class: 'span6', rows: '2', onkeyup: 'this.value=this.value.toUpperCase()'} %>
    
      <%= f.input :mr, :label => 'Место рождения', :input_html => {class: "span6", onkeyup: 'this.value=this.value.toUpperCase()'} %>

<% end %>
